<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/mapboxWhite</item>
    </style>

    <style name="TextAppearance.ChildTracker.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="Widget.ChildTracker.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.ChildTracker.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">32dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.ChildTracker.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/button_anim
        </item>
    </style>

    <style name="Widget.ChildTracker.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>